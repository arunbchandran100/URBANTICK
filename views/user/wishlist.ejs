<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wishlist</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include("partials/headerHTML") %>
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-800">Your Wishlist</h1>
            <a href="/products" class="text-indigo-600 hover:text-indigo-800 text-sm font-semibold">
                Continue Shopping
            </a>
        </div>
    </header>

    <!-- Wishlist Section -->
    <main class="container mx-auto px-4 py-6">
        <div id="wishlistItems" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Wishlist items dynamically rendered here -->
            <% if (wishlist && wishlist.length> 0) { %>
                <% wishlist.forEach((item)=> { %>
                    <div class="bg-white rounded-lg shadow-md p-4 flex flex-col items-center justify-between relative">
                        <!-- Remove Button -->
                        <button class="absolute top-2 right-2 bg-red-500 text-white rounded-full p-1 hover:bg-red-600"
                            onclick="removeFromWishlist('<%= item._id %>')">
                            <i class="fas fa-times"></i>
                        </button>
                        <!-- Image -->
                        <a href="/product/<%= item._id %>">
                            <img src="<%= item.imageUrl %>" alt="<%= item.productName %>"
                                class="w-full h-40 object-cover rounded-lg mb-4" />
                        </a>
                        <!-- Product Details -->
                        <h3 class="text-lg font-semibold text-gray-800 text-center">
                            <%= item.productName %>
                        </h3>
                        <p class="text-gray-600 text-sm">
                            <%= item.brand %>
                        </p>
                        <p class="text-gray-800 text-sm">Color: <%= item.color %>
                        </p>
                        <p class="text-yellow-500 text-sm flex items-center">
                            <i class="fa fa-star"></i>
                            <span class="ml-1">
                                <%= item.rating || "No rating" %>
                            </span>
                        </p>
                        <!-- Price -->
                        <div class="text-lg font-bold text-gray-900">
                            ₹<%= item.discountPrice.toLocaleString() %>
                                <span class="text-gray-500 line-through ml-2 text-sm">
                                    <%= item.price ? "₹" + item.price.toLocaleString() : "" %>
                                </span>
                        </div>
                        <!-- Add to Cart Button -->
                        <button onclick="addToCart('<%= item._id %>')"
                            class="mt-4 w-full bg-indigo-600 text-white font-semibold py-2 rounded-md hover:bg-indigo-700">
                            Add to Cart
                        </button>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-gray-500 text-center col-span-1 md:col-span-2 lg:col-span-3">
                                Your wishlist is empty. Start adding your favorite products!
                            </p>
                            <% } %>
        </div>
    </main>
    <script>
        // Add to Cart functionality
        async function addToCart(productId) {
            try {
                const response = await fetch(`/cart/add/${productId}`, {
                    method: "POST",
                });
                if (response.ok) {
                    alert("Item added to cart!");
                } else {
                    alert("Failed to add item to cart.");
                }
            } catch (error) {
                console.error("Error adding to cart:", error);
            }
        }

        // Remove from Wishlist functionality
        async function removeFromWishlist(productId) {
            try {
                const response = await fetch(`/wishlist/remove/${productId}`, {
                    method: "DELETE",
                });
                if (response.ok) {
                    alert("Item removed from wishlist!");
                    location.reload(); // Reload to update UI
                } else {
                    alert("Failed to remove item from wishlist.");
                }
            } catch (error) {
                console.error("Error removing from wishlist:", error);
            }
        }
    </script>
</body>

</html>